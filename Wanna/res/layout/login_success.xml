<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              
              >

    <TextView
        android:id="@+id/textwelcome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#48D1CC"
        android:textSize="25sp" />
   
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<TableRow>
<Button
        android:id="@+id/createProf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#48D1CC"
        android:text="Create Profile"
        android:textColor="#ffffff"
        android:textSize="12sp" 
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:onClick="onCreateProfile"
        
        />

      <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Search Event"
            android:id="@+id/searchEvent"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#48D1CC"
            android:onClick="onSearchEvent"
      />
</TableRow>
<TableRow>
    
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Create Event"
            android:id="@+id/createEvent"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#48D1CC"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="9dp"
            android:onClick="onCreateEvent"
      />

    

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="80dp"
        android:layout_height="80dp"
		android:background="#48D1CC"
        android:layout_below="@+id/textwelcome"
        android:text="Change Password"
        android:textColor="#ffffff"
        android:textSize="12sp" 
        
        />
    </TableRow>
    
<TableRow>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Logout"
            android:id="@+id/logout"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#48D1CC"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="9dp"
      />


   
</TableRow>
    
    </TableLayout>
    <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="User Panel"
            android:id="@+id/textView" 
            android:layout_below="@+id/logout" 
            android:layout_alignParentRight="true"
            android:textSize="18sp" android:textColor="#000000" 
            android:textAlignment="center"/>

</LinearLayout>