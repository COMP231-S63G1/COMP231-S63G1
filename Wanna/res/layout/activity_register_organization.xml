<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC"
    tools:context="${relativePackage}.${activityClass}" >
                <ScrollView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerTo"
            android:id="@+id/registerTitle"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:textSize="25sp"
            />

    <TextView        
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Organization Name"
            android:id="@+id/registerOrganizationName"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/registerTitle"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/oname"
            android:hint="Organization Name"
            android:textColor="#000000"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/registerOrganizationName"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:text="Email"
            android:id="@+id/registerEmail"
            android:gravity="center_vertical"
            android:layout_below="@+id/registerOrganizationName"
            android:layout_alignLeft="@+id/registerOrganizationName"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="E-mail"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/oname"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:text="Password"
            android:id="@+id/registerPassword"
            android:gravity="center_vertical"
            android:layout_below="@+id/registerEmail"
            android:layout_alignLeft="@+id/registerEmail"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:id="@+id/pword"
            android:hint="Password"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/registerPassword"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPassword"
            android:hint="Confirm Password"
            android:singleLine="true"
            android:layout_alignLeft="@+id/pword"
            android:layout_below="@+id/registerPassword"
            android:textSize="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:text="Confirm Password"
            android:id="@+id/registerConfirmPassword"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/confirmPassword"
            android:layout_alignLeft="@+id/registerPassword"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:id="@+id/register_error"
            android:layout_below="@+id/register"
            android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/bktologin"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/register_error"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:onClick="onBackLoginClick"
        android:text="Back To Login"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#48D1CC"
        android:textSize="15sp" />

    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/confirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:onClick="onRegisterClick"
        android:text="Register"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#48D1CC"
        android:textSize="15sp" />
</RelativeLayout>
</ScrollView>
</RelativeLayout>
